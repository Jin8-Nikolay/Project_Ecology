<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/bar_background">
        <shape>
            <solid android:color="@color/colorProgressFon" />
            <size
                android:width="200dp"
                android:height="20dp" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    <item
        android:id="@+id/bar_background_progress"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <clip>
            <scale android:scaleWidth="100%">
                <shape>
                    <corners android:radius="18dp" />
                    <solid android:color="@color/colorProgress" />
                </shape>
            </scale>
        </clip>
    </item>
</layer-list>
